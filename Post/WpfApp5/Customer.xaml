<Window x:Class="WpfApp5.Customer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="Customer" Height="450" Width="800">
    <Grid>
        <Button Content="Back" Click="Back" HorizontalAlignment="Left" Margin="733,31,0,0" VerticalAlignment="Top"/>
        <TextBlock Text="Customer Information" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Margin="0,20,0,0"/>

        <TextBlock Text="Customer Name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0"/>
        <TextBox Name="CustomerName" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,60,0,0"/>
        <TextBlock Text="Customer Email:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0"/>
        <TextBox Name="CustomerEmail" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="120,100,0,0"/>
        <Button Content="Save Customer" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="120,140,0,0" Click="SaveCustomer"/>
    </Grid>
</Window>
